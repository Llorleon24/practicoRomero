<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mapa de Monumentos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
    <style>
        #map { height: 500px; }
        .sidebar {
            max-height: 500px;
            overflow-y: auto;
        }
        .monumento-item {
            cursor: pointer;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        .monumento-item:hover {
            background-color: #f8f9fa;
        }
        .popup-content {
            text-align: center;
        }
        .popup-image {
            width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div id="map"></div>
            </div>
            <div class="col-md-4 sidebar">
                <h3 class="text-center">Monumentos</h3>
                <ul id="lista-monumentos" class="list-group"></ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let map = L.map('map').setView([36.7213, -4.4212], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        fetch('/data/monumentos')
            .then(response => response.json())
            .then(data => {
                console.log("Datos cargados:", data);

                data.features.forEach(monumento => {
                    let coords = monumento.geometry.coordinates;
                    let nombre = monumento.properties.NOMBRE || "Sin nombre";
                    let descripcion = monumento.properties.DESCRIPCION || "Sin descripci√≥n";

                    let marker = L.marker([coords[1], coords[0]], {
                        icon: L.icon({
                            iconUrl: '/images/studio.png',
                            iconSize: [30, 30]
                        })
                    }).addTo(map);

                    function mostrarPopup() {
                        Swal.fire({
                            title: nombre,
                            html: `
                                <div class="popup-content">
                                    <img src="/images/studio.png" alt="Imagen del monumento" class="popup-image">
                                    <p>${descripcion}</p>
                                </div>
                            `,
                            confirmButtonText: "OK"
                        });
                    }

                    marker.on("click", mostrarPopup);

                    let item = document.createElement("li");
                    item.className = "list-group-item monumento-item";
                    item.innerText = nombre;
                    item.onclick = () => {
                        map.setView([coords[1], coords[0]], 15);
                        mostrarPopup();
                    };
                    document.getElementById("lista-monumentos").appendChild(item);
                });
            })
            .catch(error => {
                console.error("Error cargando los datos:", error);
            });
    </script>
</body>
</html>
